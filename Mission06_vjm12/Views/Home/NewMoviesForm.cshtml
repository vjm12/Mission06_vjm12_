@{
    ViewData["Title"] = "New Movie Form";
}
@model Mission06_vjm12.Models.NewMovie

<h1>Add to the Movie Collection</h1>
<!--Create add movie form with model, drop down menus, and T/F option, and ensure validation message-->
<div>
    <form method="post">
        <label asp-for="MovieTitle">Movie Title: </label>
        <input asp-for="MovieTitle"/>
        <br /><br />
        <!--Use razor code and viewbag to get list of options for Category-->
        <label asp-for="Category">Category: </label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select>
        <br /><br />
        <label asp-for="Year">Year Made: </label>
        <input asp-for="Year" />
        <br /><br />
        <label asp-for="Director">Movie Director: </label>
        <input asp-for="Director" />
        <br /><br />
        <label asp-for="Rating">Movie Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br /><br />
        <label asp-for="Edited">Edited? Y/N</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br /><br />
        <label asp-for="LentTo">Lent to: </label>
        <input asp-for="LentTo" />
        <br /><br />
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" /><br /><br />

        <button type="submit">Submit Movie</button>
        <div asp-validation-summary="All"></div>
    </form>
</div>